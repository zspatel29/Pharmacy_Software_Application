<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/headerText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Account Info"
        tools:ignore="MissingConstraints" />

    <RelativeLayout
        style="@style/profileDetailsLayout"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/nameImageView"
            style="@style/profileDetailsImage"
            android:src="@drawable/ic_name" />

        <TextView
            android:id="@+id/nameTextView"
            style="@style/profileDetailsTextMain"
            android:layout_toRightOf="@id/nameImageView"
            android:text="Name" />

        <TextView
            android:id="@+id/user_name"
            style="@style/profileDetailsMiniText"
            android:layout_toRightOf="@id/nameImageView"
            android:text="Developer" />

    </RelativeLayout>

    <View style="@style/proifleDetailsView" />

    <RelativeLayout
        style="@style/profileDetailsLayout"
        android:layout_width="match_parent"
        android:layout_height="42dp">

        <ImageView
            android:id="@+id/mobileImageView"
            style="@style/profileDetailsImage"
            android:src="@drawable/ic_mobile" />

        <TextView
            style="@style/profileDetailsTextMain"
            android:layout_toRightOf="@id/mobileImageView"
            android:text="Mobile" />

        <TextView
            android:id="@+id/user_phone"
            style="@style/profileDetailsMiniText"
            android:layout_toRightOf="@id/mobileImageView"
            android:text="+91-8129999999" />

    </RelativeLayout>

    <View style="@style/proifleDetailsView" />

    <RelativeLayout
        style="@style/profileDetailsLayout"
        android:layout_width="match_parent"
        android:layout_height="43dp">

        <ImageView
            android:id="@+id/emailImageView"
            style="@style/profileDetailsImage"
            android:src="@drawable/ic_email" />

        <TextView
            style="@style/profileDetailsTextMain"
            android:layout_toRightOf="@id/emailImageView"
            android:text="Email" />

        <TextView
            android:id="@+id/user_email"
            style="@style/profileDetailsMiniText"
            android:layout_toRightOf="@id/emailImageView"
            android:text="developer@gmail.com" />

    </RelativeLayout>

    <View style="@style/proifleDetailsView" />

    <RelativeLayout
        style="@style/profileDetailsLayout"
        android:layout_width="match_parent"
        android:layout_height="42dp">

        <ImageView
            android:id="@+id/addressImageView"
            style="@style/profileDetailsImage"
            android:src="@drawable/ic_address" />

        <TextView
            style="@style/profileDetailsTextMain"
            android:layout_toRightOf="@id/addressImageView"
            android:text="Address" />

        <TextView
            style="@style/profileDetailsMiniText"
            android:layout_toRightOf="@id/addressImageView"
            android:text="Avenue 2nd Street NW SY." />

    </RelativeLayout>

    <View style="@style/proifleDetailsView" />

    <RelativeLayout
        style="@style/profileDetailsLayout"
        android:layout_width="match_parent"
        android:layout_height="42dp">

        <ImageView
            android:id="@+id/dobImageView"
            style="@style/profileDetailsImage"
            android:src="@drawable/ic_dob" />

        <TextView
            style="@style/profileDetailsTextMain"
            android:layout_toRightOf="@id/dobImageView"
            android:text="D.O.B" />

        <TextView
            style="@style/profileDetailsMiniText"
            android:layout_toRightOf="@id/dobImageView"
            android:text="12-05-1990" />

    </RelativeLayout>

    <View style="@style/proifleDetailsView" />

    <RelativeLayout
        android:id="@+id/btn_logout"
        style="@style/profileDetailsLayout"
        android:layout_width="match_parent"
        android:layout_height="42dp">

        <ImageView
            android:id="@+id/logoutImageView"
            style="@style/profileDetailsImage"
            android:src="@drawable/logout_icon" />

        <TextView
            style="@style/profileDetailsTextMain"
            android:layout_width="110dp"
            android:layout_height="38dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/logoutImageView"
            android:text="Logout"
            android:textSize="18sp" />

    </RelativeLayout>
</LinearLayout>